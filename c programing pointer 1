// pointer kullanarak girilen iki sayiyi toplayan c programÄ± yaz.

#include <stdio.h>
int main()
{
    int num1, num2, result;
    int *p1, *p2;
    p1 = &num1;
    p2 = &num2;

    printf("plase enter two number:");
    scanf("%d%d", p1, p2); 
    result = *p1 + *p2;
    printf("two number is total: %d", result);
    return 0;
}
